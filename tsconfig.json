{
  "compilerOptions": {
    "target": "es2020", // what is this
    "module": "commonjs", // what is this
    "moduleResolution": "node", // what is thisss
    "outDir": "./build",
    "declaration": false, // don't generate d.ts files

    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true, // do i still need this?
    "sourceMap": false, // don't generate js.map files
    "esModuleInterop": true,
    "skipLibCheck": true,

    "jsx": "react-jsx",
    "types": ["node", "jest", "./src/types/types.d.ts"]
  }
}
